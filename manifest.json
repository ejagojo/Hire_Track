{
  "manifest_version": 3,
  "name": "Hire Track",
  "version": "1.0.0",
  "description": "A job application tracker to save and log job applications directly from your browser.",
  "permissions": [
    "storage",
    "identity",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*.google.com/",
    "https://*.googleapis.com/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Hire Track"
  },
  "oauth2": {
    "client_id": "3uvi1b649scqvld6gtb8arqiuo6hth6s.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets",
      "https://www.googleapis.com/auth/drive.file"
    ]
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Open Hire Track extension"
    }
  }
}
